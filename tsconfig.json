{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
        "*": ["src/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
